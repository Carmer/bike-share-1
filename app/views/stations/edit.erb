<div class="container">

  <h1>Edit Station Info</h1>

  <form action='/stations/<%= @station.id %>' method = "POST">
    <input type="hidden" name="_method" value="PUT" />
    <div class="form-group">
      <label for="">Station Name</label>
      <input class="form-control" type="text" name="station[name]" value="<%= @station.name %>" />
    </div>
    <div class="form-group">
      <label for="">City</label>
      <input class="form-control" type="text" name="city[name]" value="<%= @station.city.name %>"/>
    </div>
    <div class="form-group">
      <label for="">Dock Count</label>
      <input class="form-control" type="number" name="station[dock_count]" value="<%= @station.dock_count %>"/>
    </div>
    <div class="form-group">
      <label for="">Installation Date</label>
      <input class="form-control" type="date" name="station[installation_date]" value="<%= @station.installation_date %>"/>
    </div>
    <input class="btn btn-default" type="submit" value="Update Station" />
  </form>
</div>
