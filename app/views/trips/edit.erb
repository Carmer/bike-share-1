<h1>Edit Trip</h1>

<form action='/trips/<%= @trip.id %>' method = "POST">
  <input type="hidden" name="_method" value="PUT" />

  <label for="">Start Station</label><br>
  <select name="trip[start_station_id]">
    <% @stations.each do |station| %>
      <% if station.id == @trip.start_station_id %>
        <option value="<%= station.id %>" selected><%= station.name %></option>
      <% else %>
        <option value="<%= station.id %>" ><%= station.name %></option>
      <% end %>
    <% end %>
  </select><br><br>

  <label for="">Start Date</label><br>
  <input type="textfield" name="trip[start_date]" value="<%= @trip.formatted_start_date %>"><br><br>

  <label for="">End Station</label><br>
  <select name="trip[end_station_id]">
    <% @stations.each do |station| %>
      <% if station.id == @trip.end_station_id %>
        <option value="<%= station.id %>" selected><%= station.name %></option>
      <% else %>
        <option value="<%= station.id %>" ><%= station.name %></option>
      <% end %>
    <% end %>
  </select><br><br>

  <label for="">End Date</label><br>
  <input type="textfield" name="trip[end_date]" value="<%= @trip.formatted_start_date %>"><br><br>

  <label for="">Bike ID</label><br>
  <input type="textfield" name="trip[bike_id]" value="<%= @trip.bike_id %>"><br><br>

  <label for="">Subscription Type</label><br>
  <select name="trip[subscription_type]">
    <% @subscription_type_list.each do |subscription_type| %>
      <% if subscription_type == @trip.subscription_type %>
        <option value="<%= subscription_type %>" selected><%= subscription_type.capitalize %></option>
      <% else %>
        <option value="<%= subscription_type %>" ><%= subscription_type.capitalize %></option>
      <% end %>
    <% end %>
  </select><br><br><br>


  <input type="submit" value="Submit" />
</form>